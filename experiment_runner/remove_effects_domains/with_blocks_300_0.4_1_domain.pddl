(define (domain blocksworld)
(:requirements :strips :equality :negative-preconditions)
(:types 	block - object
)

(:predicates (arm-empty )
	(clear ?a - block)
	(on-table ?a - block)
	(holding ?a - block)
	(on ?a - block ?b - block)
)

(:action pickup
	:parameters (?a - block)
	:precondition (and (clear ?a)
	(holding ?a))
	:effect (and (arm-empty )
		(holding ?a)
		(on-table ?a) 
		))

(:action putdown
	:parameters (?a - block)
	:precondition (and (arm-empty )
	(on-table ?a))
	:effect (and (clear ?a)
		(not (arm-empty )) 
		))

(:action stack
	:parameters (?a - block ?b - block)
	:precondition (and (arm-empty )
	(clear ?b)
	(on ?a ?b)
	(on ?b ?a)
	(on-table ?a)
	(on-table ?b)(not (= ?a ?b)))
	:effect (and (clear ?a)
		(not (arm-empty ))
		(not (on ?a ?b))
		(on ?a ?b) 
		))

(:action unstack
	:parameters (?a - block ?b - block)
	:precondition (and (clear ?a)
	(clear ?b)
	(holding ?a)
	(on ?a ?b)
	(on ?b ?a)
	(on-table ?a)
	(on-table ?b)(not (= ?a ?b)))
	:effect (and (arm-empty )
		(clear ?b)
		(holding ?a)
		(not (on ?a ?b))
		(on ?a ?b) 
		))

)